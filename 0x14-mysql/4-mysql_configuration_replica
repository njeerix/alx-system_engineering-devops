# MySQL Server configuration file for web-02 (Replica)

[mysqld]
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
datadir = /var/lib/mysql
log-error = /var/log/mysql/error.log

# Comment out bind-address to enable MySQL replication
# bind-address = 127.0.0.1

# Disabling symbolic-links is recommended to prevent security risks
symbolic-links = 0

# Setting server id (must be unique)
server-id = 2

# Setting the base name & location of MySQL binary log file
log_bin = /var/log/mysql/mysql-bin.log

# Name of database to replicate
binlog_do_db = tyrell_corp
